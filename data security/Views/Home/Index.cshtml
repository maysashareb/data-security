@{
    ViewData["Title"] = "Home Page";
}

<style>
    .home-container {
        padding: 4rem 0;
        animation: fadeIn 1s ease-in-out;
    }

    .welcome-title {
        font-size: 4rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: glow 3s infinite alternate;
    }

    .home-card {
        background: var(--card-bg);
        border: none;
        border-radius: 15px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(8px);
        transition: all 0.3s ease;
        padding: 3rem;
        margin-top: 2rem;
        position: relative;
        overflow: hidden;
    }

        .home-card:before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.05), transparent);
            transform: rotate(45deg);
            animation: shimmer 5s infinite;
        }

    .info-text {
        font-size: 1.2rem;
        line-height: 1.8;
        margin-bottom: 2rem;
        color: rgba(255, 255, 255, 0.9);
    }

        .info-text a {
            color: var(--secondary-color);
            position: relative;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s;
        }

            .info-text a:hover {
                color: white;
                text-shadow: 0 0 5px var(--secondary-color);
            }

            .info-text a:after {
                content: '';
                position: absolute;
                width: 0;
                height: 2px;
                bottom: -2px;
                left: 0;
                background-color: var(--secondary-color);
                transition: width 0.3s ease;
            }

            .info-text a:hover:after {
                width: 100%;
            }

    .feature-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 2rem;
        margin-top: 3rem;
    }

    .feature-box {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        padding: 1.5rem;
        flex: 1;
        min-width: 250px;
        max-width: 350px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
        text-align: left;
    }

        .feature-box:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
        }

    .feature-icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        color: var(--secondary-color);
    }

    .feature-title {
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 0.8rem;
    }

    .feature-text {
        color: rgba(255, 255, 255, 0.8);
        font-size: 0.95rem;
    }

    .get-started-btn {
        background: linear-gradient(135deg, var(--primary-color), #0051c8);
        border: none;
        border-radius: 50px;
        padding: 15px 40px;
        font-size: 1.2rem;
        font-weight: 600;
        letter-spacing: 1px;
        color: white;
        margin-top: 2rem;
        box-shadow: 0 8px 25px rgba(0, 120, 255, 0.4);
        transition: all 0.3s;
        position: relative;
        overflow: hidden;
    }

        .get-started-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 30px rgba(0, 120, 255, 0.6);
        }

        .get-started-btn:after {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
            transform: rotate(45deg);
            transition: all 0.8s;
            opacity: 0;
        }

        .get-started-btn:hover:after {
            animation: shimmer 1.5s infinite;
            opacity: 1;
        }
</style>

<div class="text-center home-container">
    <h1 class="welcome-title">Welcome to Data Security</h1>

    <div class="home-card">
        <p class="info-text">
            Protect your data with state-of-the-art security solutions. Learn about
            <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.
        </p>

        <div class="feature-container">
            <div class="feature-box">
                <i class="fas fa-shield-alt feature-icon"></i>
                <h3 class="feature-title">Advanced Protection</h3>
                <p class="feature-text">
                    Our security systems provide cutting-edge protection for all your sensitive information.
                </p>
            </div>

            <div class="feature-box">
                <i class="fas fa-lock feature-icon"></i>
                <h3 class="feature-title">Secure Authentication</h3>
                <p class="feature-text">
                    Multi-factor authentication and robust access controls protect your accounts.
                </p>
            </div>

            <div class="feature-box">
                <i class="fas fa-user-shield feature-icon"></i>
                <h3 class="feature-title">Privacy First</h3>
                <p class="feature-text">
                    Your privacy matters. We ensure your data stays confidential and secure.
                </p>
            </div>
        </div>

        <a asp-controller="Account" asp-action="Login" class="btn get-started-btn">
            <i class="fas fa-rocket mr-2"></i> Get Started
        </a>
    </div>
</div>